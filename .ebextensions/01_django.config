option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "mysite.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: mysite.wsgi:application

container_commands:
  01_create_data_dir:
    command: "mkdir -p /var/app/data && chmod 777 /var/app/data"

  02_create_db:
    command: |
      if [ ! -f /var/app/data/db.sqlite3 ]; then
        touch /var/app/data/db.sqlite3
      fi
      chmod 777 /var/app/data/db.sqlite3

  03_symlink_db:
    command: "rm -f /var/app/current/db.sqlite3 && ln -s /var/app/data/db.sqlite3 /var/app/current/db.sqlite3"

  04_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate --noinput"
    leader_only: true

  05_fix_permissions_after_migrate:
    command: "chmod 777 /var/app/data/db.sqlite3"

  06_create_superuser:
    command: "source /var/app/venv/*/bin/activate && echo \"from django.contrib.auth import get_user_model; User = get_user_model(); User.objects.filter(username='admin').exists() or User.objects.create_superuser('admin', 'admin@example.com', 'admin123')\" | python3 manage.py shell"
    leader_only: true

  07_fix_permissions_final:
    command: "chmod 777 /var/app/data/db.sqlite3"
