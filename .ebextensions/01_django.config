option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "mysite.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: mysite.wsgi:application

commands:
  01_install_pycurl:
    command: "echo 'Installing dependencies if needed'"

container_commands:
  01_create_data_dir:
    command: "sudo mkdir -p /var/app/data && sudo chmod 777 /var/app/data"

  02_create_db:
    command: "sudo touch /var/app/data/db.sqlite3 && sudo chmod 777 /var/app/data/db.sqlite3 && sudo chown webapp:webapp /var/app/data/db.sqlite3"

  03_symlink_db:
    command: "sudo rm -f db.sqlite3 && sudo ln -s /var/app/data/db.sqlite3 db.sqlite3"

  04_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate --noinput"
    leader_only: true

  05_fix_permissions_after_migrate:
    command: "sudo chmod 777 /var/app/data/db.sqlite3 && sudo chown webapp:webapp /var/app/data/db.sqlite3"

  06_create_superuser:
    command: "source /var/app/venv/*/bin/activate && echo \"from django.contrib.auth import get_user_model; User = get_user_model(); User.objects.filter(username='admin').exists() or User.objects.create_superuser('admin', 'admin@example.com', 'admin123')\" | python3 manage.py shell"
    leader_only: true

  07_fix_permissions_final:
    command: "sudo chmod 777 /var/app/data/db.sqlite3 && sudo chown webapp:webapp /var/app/data/db.sqlite3"
